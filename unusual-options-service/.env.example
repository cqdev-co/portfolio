# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# Market Data Provider (choose one)
# Option 1: Polygon.io (Recommended)
POLYGON_API_KEY=your_polygon_api_key

# Option 2: Tradier
TRADIER_API_KEY=your_tradier_api_key

# Option 3: CBOE DataShop
CBOE_API_KEY=your_cboe_api_key

# Data Provider Selection
DATA_PROVIDER=yfinance  # Options: polygon, tradier, yfinance

# Detection Thresholds
VOLUME_MULTIPLIER_THRESHOLD=3.0
OI_CHANGE_THRESHOLD=0.20
MIN_PREMIUM_FLOW=100000
SWEEP_MIN_EXCHANGES=3
AGGRESSIVE_ORDER_THRESHOLD=0.70

# Filtering
MIN_MARKET_CAP=1000000000
MIN_AVG_VOLUME=1000000
MIN_OPTION_VOLUME=100

# Alert Configuration (Optional)
DISCORD_WEBHOOK_URL=your_discord_webhook_url
ALERT_ENABLED=false
ALERT_MIN_GRADE=B

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/unusual_options.log

# Cache (Optional)
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=300


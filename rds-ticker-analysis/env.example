# RDS Ticker Analysis Environment Configuration

# Reddit API Configuration (Required)
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=rds-ticker-analysis/1.0

# OpenAI API Configuration (Optional - for AI analysis)
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration (Optional - for data persistence)
DATABASE_URL=postgresql://username:password@localhost:5432/rds_ticker_analysis

# Supabase Configuration (Alternative to local database)
SUPABASE_URL=your_supabase_project_url
SUPABASE_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# Analysis Configuration
SUBREDDITS=stocks,investing,options,Daytrading,wallstreetbets,pennystocks,SecurityAnalysis,ValueInvesting
POLL_WINDOW_MINUTES=120
POLL_INTERVAL_SECONDS=600
MAX_POSTS_PER_POLL=100

# Scoring Configuration
SENTIMENT_WEIGHT=0.25
VOLUME_WEIGHT=0.20
QUALITY_WEIGHT=0.20
MOMENTUM_WEIGHT=0.15
TECHNICAL_WEIGHT=0.15
FUNDAMENTAL_WEIGHT=0.05

# Bot Detection Configuration
MIN_ACCOUNT_AGE_DAYS=3
MAX_BOT_PROBABILITY=0.6

# Market Data Configuration
MARKET_DATA_CACHE_MINUTES=5
MAX_CONCURRENT_REQUESTS=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Integration Configuration
VOLATILITY_SCANNER_PATH=../volatility-squeeze-scanner

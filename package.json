{
  "name": "portfolio-monorepo",
  "private": true,
  "workspaces": [
    "frontend",
    "lib/*",
    "cds-engine-strategy",
    "pcs-engine-strategy",
    "ai-analyst",
    "cloudflare"
  ],
  "scripts": {
    "dev": "bun run --cwd frontend dev",
    "build": "turbo run build",
    "build:frontend": "bun run --cwd frontend build",
    "build:cloudflare": "bun run --cwd cloudflare deploy --dry-run",
    "start": "bun run --cwd frontend start",
    "dev:analyst": "bun run --cwd ai-analyst analyst",
    "dev:scanner": "bun run --cwd cds-engine-strategy scan",
    "cds": "bun run --cwd cds-engine-strategy engine",
    "cds:scan": "bun run --cwd cds-engine-strategy scan",
    "cds:scan-all": "bun run --cwd cds-engine-strategy scan-all",
    "cds:scan-watchlist": "bun run --cwd cds-engine-strategy scan-watchlist",
    "cds:scan-db": "bun run --cwd cds-engine-strategy scan-db",
    "cds:scan-universe": "bun run --cwd cds-engine-strategy scan-universe",
    "cds:scan-nasdaq": "bun run --cwd cds-engine-strategy scan-nasdaq",
    "cds:scan-nyse": "bun run --cwd cds-engine-strategy scan-nyse",
    "cds:spreads": "bun run --cwd cds-engine-strategy scan-spreads",
    "cds:regime": "bun run --cwd cds-engine-strategy regime",
    "cds:sectors": "bun run --cwd cds-engine-strategy sectors",
    "cds:earnings": "bun run --cwd cds-engine-strategy earnings",
    "cds:briefing": "bun run --cwd cds-engine-strategy briefing",
    "cds:watchlist": "bun run --cwd cds-engine-strategy watchlist",
    "cds:trade": "bun run --cwd cds-engine-strategy trade",
    "cds:performance": "bun run --cwd cds-engine-strategy performance",
    "pcs": "bun run --cwd pcs-engine-strategy engine",
    "pcs:scan": "bun run --cwd pcs-engine-strategy scan",
    "pcs:scan-all": "bun run --cwd pcs-engine-strategy scan-all",
    "pcs:spreads": "bun run --cwd pcs-engine-strategy scan-spreads",
    "pcs:regime": "bun run --cwd pcs-engine-strategy regime",
    "pcs:briefing": "bun run --cwd pcs-engine-strategy briefing",
    "pcs:trade": "bun run --cwd pcs-engine-strategy trade",
    "pcs:performance": "bun run --cwd pcs-engine-strategy performance",
    "dev:cloudflare": "bun run --cwd cloudflare dev",
    "test": "turbo run test",
    "test:frontend": "bun run --cwd frontend test",
    "test:analyst": "bun run --cwd ai-analyst test",
    "test:scanner": "bun run --cwd cds-engine-strategy test",
    "typecheck": "turbo run typecheck",
    "typecheck:frontend": "bun run --cwd frontend tsc --noEmit",
    "typecheck:analyst": "bun run --cwd ai-analyst typecheck",
    "typecheck:scanner": "bun run --cwd cds-engine-strategy typecheck",
    "lint": "turbo run lint",
    "lint:py": "ruff check unusual-options-service penny-stock-scanner wp-service",
    "lint:py:fix": "ruff check --fix unusual-options-service penny-stock-scanner wp-service",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:py": "ruff format unusual-options-service penny-stock-scanner wp-service",
    "format:py:check": "ruff format --check unusual-options-service penny-stock-scanner wp-service",
    "clean": "rm -rf node_modules frontend/node_modules ai-analyst/node_modules cds-engine-strategy/node_modules cloudflare/node_modules lib/*/node_modules",
    "clean:turbo": "rm -rf .turbo */.turbo",
    "prepare": "husky",
    "py:unusual-options": "cd unusual-options-service && poetry run unusual-options",
    "py:penny-scanner": "cd penny-stock-scanner && poetry run penny-scanner scan-all --min-score 0.70",
    "py:wp-service": "cd wp-service && poetry run wp-service",
    "py:install": "cd unusual-options-service && poetry install && cd ../penny-stock-scanner && poetry install && cd ../wp-service && poetry install",
    "db:migrate": "bash db/migrate.sh",
    "db:migrate:status": "bash db/migrate.sh --status",
    "db:migrate:dry-run": "bash db/migrate.sh --dry-run",
    "db:migrate:new": "bash db/migrate.sh --new",
    "audit": "bun audit",
    "audit:fix": "bun audit --fix"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "latest",
    "@types/node": "^25.0.10",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.8.1",
    "turbo": "^2.7.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,mjs,cjs}": [
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": "22.x",
    "bun": ">=1.0"
  },
  "packageManager": "bun@1.2.5",
  "dependencies": {
    "yaml": "^2.8.2"
  },
  "overrides": {
    "esbuild": "^0.25.0"
  }
}
